<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="lux.socialnetwork.SignUpActivity"
    android:background="#2B85D3">

    <TextView
        android:id="@+id/Title"
        android:text="Sign up"
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="40sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp"/>

    <TextView
        android:id="@+id/HelpText"
        android:text="Sign up, it will only take you 20 seconds. We promise."
        android:fontFamily="sans-serif-light"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="#ff4b9fff"
        android:textIsSelectable="false"
        android:gravity="center"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/Title"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp" />

    <EditText
        android:id="@+id/username_field"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Your Username"
        android:textColorHint="#FFFFFF"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@drawable/rounded_corners_register"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/HelpText"
        android:layout_alignLeft="@+id/email_field"
        android:layout_alignStart="@+id/email_field"
        android:layout_marginTop="33dp" />

    <EditText
        android:id="@+id/password_field"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Your Password"
        android:textColorHint="#FFFFFF"
        android:inputType="textPassword"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@drawable/rounded_corners_register"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/username_field"
        android:layout_alignLeft="@+id/email_field"
        android:layout_alignStart="@+id/email_field"
        android:layout_marginTop="15dp" />

    <EditText
        android:id="@+id/email_field"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:hint="Your Email"
        android:textColorHint="#FFFFFF"
        android:inputType="textEmailAddress"
        android:layout_gravity="center"
        android:gravity="center"
        android:maxLines="1"
        android:singleLine="true"
        android:background="@drawable/rounded_corners_register"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/password_field"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />


    <Button
        android:id="@+id/register_button"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:background="#fff"
        android:text="Sign up"
        android:textColor="#2B85D3"
        android:textSize="20sp"
        android:gravity="center"
        android:fontFamily="sans-serif-light"
       android:layout_below="@+id/email_field"
        android:layout_alignLeft="@+id/email_field"
        android:layout_alignStart="@+id/email_field"
        android:layout_marginTop="20dp"
        android:layout_alignRight="@+id/email_field"
        android:layout_alignEnd="@+id/email_field"  />

</RelativeLayout>
