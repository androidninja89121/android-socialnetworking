<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="#2B85D3">



    <RelativeLayout
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_above="@+id/first_comment"
        >
        <ImageView
            android:id="@+id/imageView"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:layout_below="@+id/HelpText" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="#80000000">

        <Button
            android:id="@+id/submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:background="#0000"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:layout_marginTop="3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp" />

        <Button
            android:id="@+id/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:background="#0000"
            android:textColor="#FFF"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:layout_gravity="right"
            android:layout_alignTop="@+id/submit"
            android:layout_toRightOf="@+id/textView"
            android:layout_toEndOf="@+id/textView"
            android:clickable="true"
            android:layout_marginLeft="15dp" />

        <TextView
            android:layout_width="2dp"
            android:layout_height="25dp"
            android:id="@+id/textView"
            android:background="#FFF"
            android:layout_marginBottom="9dp"
            android:layout_alignBottom="@+id/cancel"
            android:layout_toRightOf="@+id/submit"
            android:layout_toEndOf="@+id/submit"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp" />
         </RelativeLayout>
    </RelativeLayout>

    <EditText
        android:id="@+id/first_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="âœŽ Maach e Kommentar"
        android:textColorHint="#2B85D3"
        android:background="#FFFF"
        android:orientation="horizontal"
        android:fontFamily="sans-serif-light"
        android:focusable="true"
        android:textSize="20sp"
        android:textColor="#2B85D3"
        android:layout_below="@+id/imageView"
        android:inputType="textCapSentences"
        android:lines="8"
        android:minLines="1"
        android:gravity="center"
        android:maxLines="10"
        android:layout_weight="0.10" />


</LinearLayout>


